{
    "builds": [
      {
        "src": "littlelemon/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime":"python3.9",
          "installCommand": "pip install -r requirements.txt"
        }
      },
      {
          "src": "build_files.sh",
          "use": "@vercel/static",
          "config":{
              "distDir": "staticfiles"
          }
        }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "littlelemon/wsgi.py"
      }
    ]
  }
  
