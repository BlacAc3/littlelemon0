{
    "version":2,
    "name":"littlelemon",
    "builds": [
      {
      "src": "littlelemon/wsgi.py",
      "use": "@ardnt/now-python-wsgi",
      "config": {
        "maxLambdaSize": "30mb"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static",
      "config": {
        "distDir": "staticfiles"
      }
    }
    ],
    "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
      {
        "src": "/(.*)",
        "dest": "littlelemon/wsgi.py"
      }
    ]
  }
  
